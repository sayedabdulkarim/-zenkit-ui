{
  "name": "zenkit-ui",
  "version": "0.0.0",
  "private": true,
  "description": "ZenKit UI - A modern React component library built on ZenKit CSS",
  "author": "Sayed Abdul Karim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayedabdulkarim/zenkit-ui"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "storybook": "turbo storybook --filter=@zenkit-ui/storybook",
    "build-storybook": "turbo build-storybook --filter=@zenkit-ui/storybook",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=@zenkit-ui/core && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
